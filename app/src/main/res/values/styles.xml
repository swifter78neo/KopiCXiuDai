<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#03A9F4</item>
        <!-- colorPrimaryDark is used for the status bar, only works on Lollipop + devices -->
        <item name="colorPrimaryDark">#0288D1</item>
        <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
        <item name="colorAccent">#009688</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#03A9F4</item>

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight & colorSwitchThumbNormal. -->

    </style>

    <style name="HeaderTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
